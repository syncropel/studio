{
  "name": "syncropel-studio",
  "version": "0.0.0",
  "private": true,
  "main": "electron-main.js",
  "description": "Syncropel Studio: The UI for the Contextual Shell Engine.",
  "author": {
    "name": "Syncropel",
    "email": "dev@syncropel.com"
  },
  "homepage": "https://github.com/syncropel/studio",
  "scripts": {
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "dev": "next dev --turbopack",
    "dev:mock": "concurrently \"npm:dev\" \"node src/mocks/server.mjs\"",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@handsontable/react-wrapper": "^16.1.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@mantine/code-highlight": "^8.3.0",
    "@mantine/core": "^8.3.0",
    "@mantine/hooks": "^8.3.0",
    "@mantine/notifications": "^8.3.0",
    "@monaco-editor/react": "^4.7.0",
    "@nivo/core": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-query": "^5.90.5",
    "@types/markdown-it": "^14.1.2",
    "handsontable": "^16.1.1",
    "js-yaml": "^4.1.0",
    "mantine-datatable": "^8.2.0",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.1.5",
    "next": "15.5.2",
    "postcss-preset-mantine": "^1.18.0",
    "rc-tree": "^5.13.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-resizable-panels": "^3.0.5",
    "react-use-websocket": "^4.13.0",
    "reactflow": "^11.11.4",
    "yaml": "^2.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.Syncropel.studio",
    "productName": "Syncropel Studio",
    "files": [
      "out/**/*",
      "electron-main.js",
      "electron-preload.js"
    ],
    "extraResources": [
      {
        "from": "./resources/cx-server",
        "to": "cx-server"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "dpwanjala <dp.wanjala@example.com>",
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
